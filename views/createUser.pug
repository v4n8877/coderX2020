extends ./layouts/common.pug

block content
  h1 Create a user
  if errors
    each error in errors
      .alert.alert-danger= error
  form(action="/users/create", method="POST", enctype="multipart/form-data")
    div.form-group
      lable
        b Name
      input.form-control(type="text", name="name", value=values ? values.name : '')
    div.form-group
      lable
        b Email
      input.form-control(type="text", name="email", value=values ? values.email : '')
    div.form-group
      lable
        b Upload Image
      input.form-control-file(type="file", name="avatar")
    button.btn.btn-primary Create